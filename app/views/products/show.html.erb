
<h1 class="prod_name"><%=@product.name%></h1>

<h3 class="prod_desc"><%= @product.description%></h3>
<h3 class="product_price"><%= @product.price%></h3>

<a href="#" class="js-next" data-id="<%= @product.id%>">Next Product</a>
<script type="text/javascript" charset="utf-8">
  $(function(){
    $(".js-next").on('click', function(){
      let nextId=parseInt($('.js-next').attr("data-id"))+1;
      $.get('/products/'+ nextId+ '/data/', function(data){
        $('.prod_name').text(data["name"])
        $('.prod_desc').text(data["description"])
        $('.product_price').text(data["price"])
        $('.js-next').attr("data-id", data["id"])
      })

    })
  })
</script>
